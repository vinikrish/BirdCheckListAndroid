<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Country and Save Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textSize="14sp"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <!-- Search EditText -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search birds..."
        android:layout_marginBottom="16dp" />

    <!-- Header Table -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="#E8F5E8"
        android:padding="12dp">

        <!-- Column 1: Bird Name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Bird Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:gravity="center" />

        <!-- Column 2: M/F -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M/F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:gravity="center" />

        <!-- Column 3: Saw Icon -->
        <ImageView
            android:id="@+id/headerIconSaw"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/saw"
            android:contentDescription="Saw" />

        <!-- Column 4: Photographed Icon -->
        <ImageView
            android:id="@+id/headerIconPhotographed"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/photographed"
            android:contentDescription="Photographed" />

        <!-- Column 5: Heard Icon -->
        <ImageView
            android:id="@+id/headerIconHeard"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/heard"
            android:contentDescription="Heard" />

    </LinearLayout>

    <!-- RecyclerView for bird list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/birdRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Empty view -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No birds found"
        android:gravity="center"
        android:visibility="gone" />



</LinearLayout>